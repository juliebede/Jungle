<header class="page-header">
</header>
<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% total_price = 0 %>
      <% @order.line_items.each do |item| %>
        <%= render 'ordered_item', product: item.product, quantity: item.quantity.to_i %>
        <% total_price += (item.product.price * item.quantity.to_i) %>
       <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol total_price %>
        </th>
      </tr>
    </tfoot>
  </table>